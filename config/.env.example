# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your_secure_password_here
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672

# EventStore Configuration
EVENTSTORE_URL=http://localhost:2113
EVENTSTORE_USERNAME=admin
EVENTSTORE_PASSWORD=changeit

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_256_bits
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key
SIGNATURE_PRIVATE_KEY_PATH=./config/keys/private.pem
SIGNATURE_PUBLIC_KEY_PATH=./config/keys/public.pem

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@fintech-platform.com

# External Services
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret

TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Monitoring & Observability
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3006
JAEGER_URL=http://localhost:16686

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
API_VERSION=v1
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Security
CORS_ORIGIN=http://localhost:3010
HELMET_ENABLED=true
BCRYPT_ROUNDS=12

# Payment Configuration
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,JPY,CAD,AUD
MAX_PAYMENT_AMOUNT=1000000
MIN_PAYMENT_AMOUNT=0.01
PAYMENT_TIMEOUT=300000

# Fraud Detection
FRAUD_THRESHOLD=0.7
VELOCITY_CHECK_WINDOW=3600000
MAX_TRANSACTIONS_PER_HOUR=10
GEOLOCATION_MAX_DISTANCE=1000

# Wallet Configuration
DEFAULT_HOLD_PERIOD=604800
MAX_HOLD_AMOUNT=50000
RELEASE_SCHEDULE_ENABLED=true

# Reconciliation
RECONCILIATION_INTERVAL=300000
RECONCILIATION_BATCH_SIZE=1000
ANOMALY_THRESHOLD=0.01

# Database Connection Pools
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Circuit Breaker
CIRCUIT_BREAKER_TIMEOUT=5000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY=1000
RETRY_MAX_DELAY=10000
RETRY_BACKOFF_MULTIPLIER=2

# Webhook Configuration
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_SECRET=your_webhook_secret

# Compliance
PCI_DSS_MODE=strict
DATA_RETENTION_DAYS=2555
AUDIT_LOG_ENABLED=true
GDPR_COMPLIANCE=true
