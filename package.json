{
  "name": "fintech-payment-platform",
  "version": "1.0.0",
  "description": "Enterprise payment platform with microservices architecture",
  "main": "index.js",
  "scripts": {
    "dev": "docker-compose up -d",
    "dev:logs": "docker-compose logs -f",
    "dev:down": "docker-compose down",
    "build": "npm run build:services && npm run build:frontend",
    "build:services": "docker-compose build",
    "build:frontend": "cd frontend/web && npm run build",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:e2e": "cd tests/e2e && npm run test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write .",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "monitoring": "docker-compose up prometheus grafana jaeger",
    "docs:generate": "typedoc --out docs/api src",
    "docs:serve": "http-server docs/api -p 8080",
    "security:audit": "npm audit",
    "security:check": "npm run lint && npm run security:audit",
    "deploy:staging": "kubectl apply -f infrastructure/k8s/staging/",
    "deploy:production": "terraform -chdir=infrastructure/terraform/production apply",
    "health-check": "node scripts/health-check.js",
    "reconcile": "node scripts/reconcile.js",
    "generate-keys": "node scripts/generate-keys.js",
    "setup": "npm install && cp config/.env.example config/.env && npm run generate-keys"
  },
  "keywords": [
    "fintech",
    "payments",
    "microservices",
    "ledger",
    "anti-fraud",
    "enterprise",
    "blockchain",
    "cryptocurrency"
  ],
  "author": "Fintech Platform Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/fintech-payment-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/fintech-payment-platform/issues"
  },
  "homepage": "https://github.com/your-org/fintech-payment-platform#readme",
  "workspaces": [
    "services/*",
    "frontend/*",
    "shared/*"
  ]
}
